  "validation": {
    "balance": {
      "min": 0,
      "max": 10000000,
      "confidence_threshold": 0.85
    },
    "bet": {
      "min": 0.10,
      "max": 500,
      "confidence_threshold": 0.90
    },
    "win": {
      "min": 0,
      "max": 50000000,
      "confidence_threshold": 0.85
    },
    "sticky_multiplier": {
      "min": 1,
      "max": 5000,
      "confidence_threshold": 0.78
    }
