{
  "game_id": "zeus-vs-hades",
  "game_name": "Zeus vs Hades: Gods of War",
  "provider": "pragmatic-play",
  "version": "1.0",
  "last_updated": "2026-01-02",

  "resolution": {
    "width": 1280,
    "height": 720,
    "notes": "Template designed for 720p stream capture"
  },

  "regions": {
    "balance": {
      "x": 50,
      "y": 680,
      "width": 200,
      "height": 35,
      "description": "Balance display area (bottom-left)",
      "expected_format": "currency",
      "currency_symbols": ["$", "€", "£", "₺"]
    },
    "bet": {
      "x": 550,
      "y": 680,
      "width": 180,
      "height": 35,
      "description": "Current bet amount (bottom-center)",
      "expected_format": "currency"
    },
    "win": {
      "x": 1030,
      "y": 680,
      "width": 200,
      "height": 35,
      "description": "Win amount display (bottom-right)",
      "expected_format": "currency"
    },
    "multiplier": {
      "x": 590,
      "y": 290,
      "width": 100,
      "height": 55,
      "description": "Multiplier orb during tumble (Zeus or Hades)",
      "expected_format": "multiplier",
      "trigger_condition": "bonus_active"
    },
    "free_spins_counter": {
      "x": 100,
      "y": 100,
      "width": 100,
      "height": 40,
      "description": "Free spins remaining counter",
      "expected_format": "integer",
      "trigger_condition": "bonus_active"
    },
    "game_mode_indicator": {
      "x": 580,
      "y": 50,
      "width": 120,
      "height": 40,
      "description": "Zeus or Hades mode indicator",
      "expected_format": "text",
      "trigger_condition": "bonus_active"
    },
    "total_win": {
      "x": 480,
      "y": 340,
      "width": 320,
      "height": 85,
      "description": "Total win popup",
      "expected_format": "currency",
      "trigger_condition": "win_popup"
    }
  },

  "preprocessing": {
    "grayscale": true,
    "threshold": {
      "enabled": true,
      "value": 140,
      "method": "binary"
    },
    "denoise": {
      "enabled": true,
      "strength": 3
    },
    "contrast": {
      "enabled": true,
      "alpha": 1.55,
      "beta": 0
    },
    "resize": {
      "enabled": false,
      "scale": 2.0
    }
  },

  "validation": {
    "balance": {
      "min": 0,
      "max": 10000000,
      "confidence_threshold": 0.85
    },
    "bet": {
      "min": 0.10,
      "max": 1000,
      "confidence_threshold": 0.90
    },
    "win": {
      "min": 0,
      "max": 50000000,
      "confidence_threshold": 0.85
    },
    "multiplier": {
      "min": 1,
      "max": 500,
      "confidence_threshold": 0.80
    }
  },

  "game_states": {
    "idle": {
      "description": "Normal gameplay before choosing god",
      "active_regions": ["balance", "bet", "win"]
    },
    "spinning": {
      "description": "Reels spinning",
      "active_regions": ["balance", "bet"],
      "skip_win": true
    },
    "zeus_spins": {
      "description": "Zeus Free Spins (blue/lightning theme)",
      "active_regions": ["balance", "bet", "win", "multiplier", "free_spins_counter", "game_mode_indicator"],
      "indicators": {
        "screen_tint": "blue",
        "god_active": "zeus"
      }
    },
    "hades_spins": {
      "description": "Hades Free Spins (red/fire theme)",
      "active_regions": ["balance", "bet", "win", "multiplier", "free_spins_counter", "game_mode_indicator"],
      "indicators": {
        "screen_tint": "red",
        "god_active": "hades"
      }
    },
    "win_popup": {
      "description": "Big win celebration",
      "active_regions": ["total_win"],
      "duration_ms": 6000
    }
  },

  "detection_hints": {
    "bonus_trigger": {
      "method": "scatter_count",
      "threshold": 4,
      "symbol": "scatter_orb"
    },
    "god_selection": {
      "method": "screen_color",
      "zeus_color": "blue",
      "hades_color": "red"
    }
  },

  "known_issues": [
    "Two distinct color themes (blue/red) need different preprocessing",
    "God animations can temporarily cover multiplier display",
    "Lightning/fire effects can affect OCR accuracy",
    "Mode switch animation causes brief display disruption"
  ]
}
