{
  "game_id": "sweet-bonanza",
  "game_name": "Sweet Bonanza",
  "provider": "pragmatic-play",
  "version": "1.0",
  "last_updated": "2025-01-01",
  
  "resolution": {
    "width": 1280,
    "height": 720,
    "notes": "Template designed for 720p stream capture"
  },
  
  "regions": {
    "balance": {
      "x": 50,
      "y": 680,
      "width": 200,
      "height": 35,
      "description": "Balance display area (bottom-left)",
      "expected_format": "currency",
      "currency_symbols": ["$", "€", "£", "₺"]
    },
    "bet": {
      "x": 550,
      "y": 680,
      "width": 180,
      "height": 35,
      "description": "Current bet amount (bottom-center)",
      "expected_format": "currency"
    },
    "win": {
      "x": 1030,
      "y": 680,
      "width": 200,
      "height": 35,
      "description": "Win amount display (bottom-right)",
      "expected_format": "currency"
    },
    "multiplier": {
      "x": 580,
      "y": 300,
      "width": 120,
      "height": 60,
      "description": "Tumble multiplier (center screen during feature)",
      "expected_format": "multiplier",
      "trigger_condition": "bonus_active"
    },
    "free_spins_counter": {
      "x": 100,
      "y": 100,
      "width": 100,
      "height": 40,
      "description": "Free spins remaining counter",
      "expected_format": "integer",
      "trigger_condition": "bonus_active"
    },
    "total_win": {
      "x": 500,
      "y": 350,
      "width": 280,
      "height": 80,
      "description": "Total win popup (appears after big wins)",
      "expected_format": "currency",
      "trigger_condition": "win_popup"
    }
  },
  
  "preprocessing": {
    "grayscale": true,
    "threshold": {
      "enabled": true,
      "value": 140,
      "method": "binary"
    },
    "denoise": {
      "enabled": true,
      "strength": 3
    },
    "contrast": {
      "enabled": true,
      "alpha": 1.5,
      "beta": 0
    },
    "resize": {
      "enabled": false,
      "scale": 2.0
    }
  },
  
  "validation": {
    "balance": {
      "min": 0,
      "max": 10000000,
      "confidence_threshold": 0.85
    },
    "bet": {
      "min": 0.10,
      "max": 1000,
      "confidence_threshold": 0.90
    },
    "win": {
      "min": 0,
      "max": 100000000,
      "confidence_threshold": 0.85
    },
    "multiplier": {
      "min": 1,
      "max": 500,
      "confidence_threshold": 0.80
    }
  },
  
  "game_states": {
    "idle": {
      "description": "Normal gameplay, no bonus",
      "active_regions": ["balance", "bet", "win"]
    },
    "spinning": {
      "description": "Reels spinning",
      "active_regions": ["balance", "bet"],
      "skip_win": true
    },
    "bonus_active": {
      "description": "Free spins feature active",
      "active_regions": ["balance", "bet", "win", "multiplier", "free_spins_counter"],
      "indicators": {
        "screen_tint": "purple",
        "multiplier_visible": true
      }
    },
    "win_popup": {
      "description": "Big win celebration popup",
      "active_regions": ["total_win"],
      "duration_ms": 5000
    }
  },
  
  "detection_hints": {
    "bonus_trigger": {
      "method": "scatter_count",
      "threshold": 4,
      "symbol": "lollipop"
    },
    "tumble_active": {
      "method": "multiplier_visible",
      "region": "multiplier"
    }
  },
  
  "known_issues": [
    "Currency symbol sometimes misread as number",
    "Multiplier text can overlap with candy animations",
    "Some streamers use custom overlays that cover balance"
  ],
  
  "streamer_overrides": {
    "roshtein": {
      "balance": {
        "x": 60,
        "y": 675,
        "notes": "Roshtein has custom overlay slightly shifted"
      }
    },
    "trainwreckstv": {
      "balance": {
        "x": 45,
        "y": 680,
        "notes": "Train uses different resolution sometimes"
      }
    }
  },
  
