  "preprocessing": {
    "grayscale": true,
    "threshold": {
      "enabled": true,
      "value": 128,
      "method": "binary"
    },
    "denoise": {
      "enabled": true,
      "strength": 4
    },
    "contrast": {
      "enabled": true,
      "alpha": 1.65,
      "beta": 5
    },
    "resize": {
      "enabled": false,
      "scale": 2.0
    }
  },

  "validation": {
    "balance": {
      "min": 0,
      "max": 10000000,
      "confidence_threshold": 0.85
    },
    "bet": {
      "min": 0.10,
      "max": 500,
      "confidence_threshold": 0.90
    },
    "win": {
      "min": 0,
      "max": 100000000,
      "confidence_threshold": 0.85
    },
    "xbomb_multiplier": {
      "min": 1,
      "max": 5000,
      "confidence_threshold": 0.75
    }
  },

  "game_states": {
    "idle": {
      "description": "Normal gameplay with mining theme",
      "active_regions": ["balance", "bet", "win", "ways_counter"]
    },
    "spinning": {
      "description": "Reels spinning",
      "active_regions": ["balance", "bet", "ways_counter"],
      "skip_win": true
    },
    "lucky_wagon_spins": {
      "description": "Lucky Wagon Free Spins feature",
      "active_regions": ["balance", "bet", "win", "xbomb_multiplier", "ways_counter", "spins_counter"],
      "indicators": {
        "xbomb_wilds": true,
        "drill_feature": true
      }
    },
    "win_popup": {
      "description": "Big win celebration (up to 60,000x)",
      "active_regions": ["total_win"],
      "duration_ms": 7000
    }
  },

  "detection_hints": {
    "bonus_trigger": {
      "method": "scatter_count",
      "threshold": 3,
      "symbol": "bonus_scatter"
    },
    "xbomb_detection": {
      "method": "symbol_presence",
      "symbol": "xbomb_wild"
    },
    "drill_activation": {
      "method": "symbol_presence",
      "symbol": "drill"
    }
  },

  "known_issues": [
    "60,000x max win needs large number handling",
