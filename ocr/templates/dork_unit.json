  "preprocessing": {
    "grayscale": true,
    "threshold": {
      "enabled": true,
      "value": 135,
      "method": "binary"
    },
    "denoise": {
      "enabled": true,
      "strength": 3
    },
    "contrast": {
      "enabled": true,
      "alpha": 1.5,
      "beta": 5
    },
    "resize": {
      "enabled": false,
      "scale": 2.0
    }
  },

  "validation": {
    "balance": {
      "min": 0,
      "max": 10000000,
      "confidence_threshold": 0.85
    },
    "bet": {
      "min": 0.10,
      "max": 500,
      "confidence_threshold": 0.90
    },
    "win": {
      "min": 0,
      "max": 100000000,
      "confidence_threshold": 0.85
    },
    "multiplier": {
      "min": 1,
      "max": 10000,
      "confidence_threshold": 0.78
    }
  },

  "game_states": {
    "idle": {
      "description": "Normal cluster gameplay",
      "active_regions": ["balance", "bet", "win"]
    },
    "spinning": {
      "description": "Symbols dropping",
      "active_regions": ["balance", "bet"],
      "skip_win": true
    },
    "bonus_active": {
      "description": "Free Spins with sticky multipliers",
      "active_regions": ["balance", "bet", "win", "multiplier", "spins_counter"],
      "indicators": {
        "dork_characters": true,
        "sticky_multipliers": true
      }
    },
    "win_popup": {
      "description": "Big win celebration with character dance",
      "active_regions": ["total_win"],
      "duration_ms": 6000
    }
  },

  "detection_hints": {
    "bonus_trigger": {
      "method": "scatter_count",
      "threshold": 3,
      "symbol": "bonus_character"
    },
    "full_screen_win": {
      "method": "symbol_coverage",
      "threshold": 0.8
    }
  },

  "known_issues": [
