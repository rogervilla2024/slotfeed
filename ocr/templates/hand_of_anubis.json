  "game_states": {
    "idle": {
      "description": "Normal cluster gameplay with Egyptian theme",
      "active_regions": ["balance", "bet", "win"]
    },
    "spinning": {
      "description": "Symbols dropping",
      "active_regions": ["balance", "bet"],
      "skip_win": true
    },
    "bonus_active": {
      "description": "Free Spins with sticky multipliers and expanding wilds",
      "active_regions": ["balance", "bet", "win", "sticky_multiplier", "spins_counter"],
      "indicators": {
        "anubis_wild": true,
        "sticky_multipliers": true
      }
    },
    "win_popup": {
      "description": "Big win celebration with Anubis",
      "active_regions": ["total_win"],
      "duration_ms": 6500
    }
  },

  "detection_hints": {
    "bonus_trigger": {
      "method": "scatter_count",
      "threshold": 3,
      "symbol": "scatter"
    },
    "expanding_wild": {
      "method": "symbol_presence",
      "symbol": "anubis_wild"
    }
  },

