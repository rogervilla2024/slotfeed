  "preprocessing": {
    "grayscale": true,
    "threshold": {
      "enabled": true,
      "value": 125,
      "method": "binary"
    },
    "denoise": {
      "enabled": true,
      "strength": 4
    },
    "contrast": {
      "enabled": true,
      "alpha": 1.7,
      "beta": 8
    },
    "resize": {
      "enabled": false,
      "scale": 2.0
    }
